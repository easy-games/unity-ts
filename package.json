{
	"name": "@easy-games/unity-ts",
	"version": "3.1.0",
	"publishConfig": {
		"access": "public"
	},
	"description": "A TypeScript-to-Luau Compiler for Unity",
	"main": "out/CLI/index.js",
	"bin": {
		"utsc": "out/CLI/cli.js"
	},
	"types": "out/Types/index.d.ts",
	"scripts": {
		"prepublishOnly": "npm run build",
		"build": "tspc -b",
		"build-watch": "tspc -b -w",
		"eslint": "eslint \"src/**/*.ts\" --max-warnings 0",
		"devlink": "npm run build && cd devlink && npm link"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/easy-games/unity-ts.git"
	},
	"nyc": {
		"all": true,
		"reporter": [
			"lcov"
		],
		"extension": [
			".ts"
		],
		"include": [
			"out/**/*.js",
			"src/**/*.ts"
		],
		"exclude": [
			"src/CLI",
			"src/Project",
			"src/LuauAST/impl/globals.ts",
			"src/LuauAST/impl/strings.ts",
			"src/Shared/classes/LogService.ts",
			"src/Shared/classes/RojoResolver.ts",
			"src/TSTransformer/util/getFlags.ts",
			"src/TSTransformer/util/getKindName.ts",
			"src/TSTransformer/util/jsx/constants.ts"
		]
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@roblox-ts/luau-ast": "^1.0.11",
		"ajv": "^8.6.3",
		"chokidar": "^3.5.3",
		"copyfiles": "^2.4.1",
		"fs-extra": "^10.1.0",
		"kleur": "^4.1.5",
		"lookpath": "^1.2.2",
		"prompts": "^2.4.2",
		"resolve": "^1.22.1",
		"typescript": "=5.1.6",
		"yargs": "^17.5.1"
	},
	"devDependencies": {
		"@types/copyfiles": "^2.4.1",
		"@types/fs-extra": "^9.0.13",
		"@types/mocha": "^10.0.0",
		"@types/node": "^16.18.71",
		"@types/prompts": "^2.0.14",
		"@types/resolve": "^1.20.2",
		"@types/ts-expose-internals": "npm:ts-expose-internals@=5.1.6",
		"@types/yargs": "^17.0.12",
		"@typescript-eslint/eslint-plugin": "^5.36.2",
		"@typescript-eslint/parser": "^5.36.2",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-no-autofix": "^1.2.3",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-simple-import-sort": "^8.0.0",
		"mocha": "^10.0.0",
		"nyc": "^15.1.0",
		"prettier": "^2.7.1",
		"ts-patch": "^3.0.2",
		"typescript-transform-paths": "^3.4.6"
	},
	"files": [
		"out",
		"include",
		"templates",
		"CHANGELOG.md",
		"!**/*.js.map",
		"!**/*.tsbuildinfo"
	]
}
